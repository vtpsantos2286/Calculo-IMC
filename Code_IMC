    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
       
        double altura, peso, IMC;
        altura = Double.parseDouble(jAltura.getText());
        peso = Double.parseDouble(jPeso.getText());
        IMC = peso / (altura * altura);
        String fmt;
        DecimalFormat df = new DecimalFormat("0.00");
        fmt = df.format(IMC);
        
        if(IMC <= 17 )
        {
            JOptionPane.showMessageDialog(null, " Seu IMC e: " +fmt );
            JOptionPane.showMessageDialog(null, " Voce esta muito abaixo do peso " );
        }
        else if((IMC > 17)&&(IMC <=18.49) )
        {
            JOptionPane.showMessageDialog(null, " Seu IMC e: " +fmt );
            JOptionPane.showMessageDialog(null, " Voce esta abaixo do peso " );
        }
        if((IMC >= 18.50)&&(IMC <=24.99) )
        {
            JOptionPane.showMessageDialog(null, " Seu IMC e: " +fmt );
            JOptionPane.showMessageDialog(null, " Seu peso esta Normal " );
        }
        if((IMC >= 25)&&(IMC <=29.99) )
        {
            JOptionPane.showMessageDialog(null, " Seu IMC e: " +fmt );
            JOptionPane.showMessageDialog(null, " Voce esta acima do peso" );
        }
        if((IMC >= 30)&&(IMC <=34.99) )
        {
            JOptionPane.showMessageDialog(null, " Seu IMC e: " +fmt );
            JOptionPane.showMessageDialog(null, " Obesidade I " );
        }
        if((IMC >= 35)&&(IMC <=39.99) )
        {
            JOptionPane.showMessageDialog(null, " Seu IMC e: " +fmt );
            JOptionPane.showMessageDialog(null, " Obesidade II " );
        }
        if((IMC >= 36 )&&(IMC <=49.99) )
        {
            JOptionPane.showMessageDialog(null, " Seu IMC e: " +fmt );
            JOptionPane.showMessageDialog(null, " Obesidade III " );
        }
        if(IMC >= 50 )
        {
            JOptionPane.showMessageDialog(null, " Seu IMC e: " +fmt );
            JOptionPane.showMessageDialog(null, " Encomende o caix√£o , se encontrar um !!!!! " );
        }
    }//GEN-LAST:event_jButton1ActionPerformed

